{
  "displayName": "Backend Tests",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html", "json"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testTimeout": 10000,
  "clearMocks": true,
  "restoreMocks": true,
  "resetMocks": true
}
